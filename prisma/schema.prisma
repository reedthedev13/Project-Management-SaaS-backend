
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  // or your DB connection string
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String?
  passwordHash String
  ownedBoards  Board[]  @relation("BoardOwner")
  memberBoards Board[]  @relation("BoardMembers")
  assignedTasks Task[]  @relation("TaskAssignee")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // New preference fields
  theme        String   @default("light")     // or "dark"
  notifications Boolean @default(true)        // example preference
}

model Board {
  id        Int      @id @default(autoincrement())
  title     String
  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id], name: "BoardOwner")
  members   User[]   @relation("BoardMembers")
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  completed Boolean  @default(false)
  description String?
  boardId     Int
  board       Board    @relation(fields: [boardId], references: [id])
  assigneeId  Int?
  assignee    User?    @relation(fields: [assigneeId], references: [id], name: "TaskAssignee")
  status      String   @default("todo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



