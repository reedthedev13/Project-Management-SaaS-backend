
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  // or your DB connection string
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  passwordHash String
  ownedBoards Board[]  @relation("BoardOwner")  // User owns many boards
  memberBoards Board[] @relation("BoardMembers") // User is member of many boards
  assignedTasks Task[]  @relation("TaskAssignee")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Board {
  id        Int      @id @default(autoincrement())
  title     String
  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id], name: "BoardOwner")
  members   User[]   @relation("BoardMembers")
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  boardId     Int
  board       Board    @relation(fields: [boardId], references: [id])
  assigneeId  Int?
  assignee    User?    @relation(fields: [assigneeId], references: [id], name: "TaskAssignee")
  status      String   @default("todo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



